programa {
  funcao inicio() {
    //Declaração de variaveis
    real mes1,mes2,mes3,media_aritmetica
    //Entrada de dados
    escreva("informe o gasto do primeiro mês: ")
    leia(mes1)
    
    escreva("informe o gasto do segundo mês: ")
    leia(mes2) 
    
    escreva("informe o gasto do terceiro mês: ")
    leia(mes3)

    //Processamento
    media_aritmetica=(mes1+mes2+mes3)/3

    //Saida de dados
    escreva("A media aritmetica do valor gasto ê: ",media_aritmetica)
    
    
  }
}
